<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cakes.Cart">

    <include
        android:id="@+id/neuuserdata"
        layout="@layout/newuserdata"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.75" />

    <ImageButton
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
       android:background="@color/fui_transparent"
        android:id="@+id/back_button"
        app:tint="@android:color/black" />
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/relative1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:text="Sub Total"/>

            <TextView
                android:id="@+id/cartsubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:text="230.00"
                android:textColor="@android:color/black"
                android:textStyle="italic" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/relative1"
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:text="Delivery Charge"/>
            <TextView
                android:id="@+id/delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:textColor="@android:color/black"
                android:layout_alignParentRight="true"
                android:textStyle="italic"
                android:text="Free"/>
        </RelativeLayout>
        <RelativeLayout

            android:layout_marginLeft="10dp"
            android:layout_below="@+id/relative2"
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="#08700C"
                android:text="Free Delivery:"/>
            <TextView
                android:id="@+id/free_delivery_minimum_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E64715"
                android:layout_alignParentRight="true"
                android:textStyle="italic"
                android:text="On orders over â‚¹549 shipped by DKExpress"/>
        </RelativeLayout>
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/spinnerline"
            android:layout_below="@id/relative3"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight=".5"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Time"/>
            <Spinner
                android:layout_weight=".5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/slotpicker"/>
        </LinearLayout>

        <ScrollView
            android:layout_above="@+id/Continueline"
            android:layout_below="@+id/spinnerline"
            android:layout_marginTop="20dp"
            android:id="@+id/scrolls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/giftline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_item"/>
                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Gift Product"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gifts"/>

            </LinearLayout>

        </ScrollView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:id="@+id/Continueline"
            android:weightSum="1"
            android:clickable="true"
            android:background="#35992A"
            android:orientation="horizontal">
            <Button
                android:layout_weight="0.9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/border1"
                android:backgroundTint="#35992A"
                android:id="@+id/Continue"/>
            <TextView
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="430.00"
                android:textSize="20dp"
                android:id="@+id/total"
                android:textColor="@android:color/black"/>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>