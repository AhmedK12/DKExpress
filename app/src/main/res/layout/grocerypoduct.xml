<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card"
    android:layout_width="175dp"
    android:layout_height="215dp"
    android:clickable="true"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Media -->

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:contentDescription="dd"
                    android:elevation="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/product_name"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:text="Product Title:"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />

                    <RatingBar
                        android:id="@+id/ratingbar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:numStars="5"
                        android:rating="2.5"
                        android:stepSize="0.5" />

                    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                android:orientation="horizontal">




                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹232.00"
                        android:textSize="@dimen/secondry_text_size"
                        />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:visibility="gone"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="@dimen/secondry_text_size"
                            />

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/new_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹210.00"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="@dimen/secondry_text_size"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/ssavve"
                            android:text="Save "
                            android:layout_gravity="center_vertical"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="#000"
                            android:textSize="@dimen/secondry_text_size"
                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/offer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="20.00 (10%)"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="#FF001E"
                            android:textSize="@dimen/secondry_text_size"
                            />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:id="@+id/offerlogo"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C60404">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save: "
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="14dp"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹210"
            android:id="@+id/text_off"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:textColor="#ffffff"/>
    </LinearLayout>



</androidx.cardview.widget.CardView>