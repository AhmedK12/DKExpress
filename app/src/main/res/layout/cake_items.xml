<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"

            android:src="@drawable/cake1"
            android:id="@+id/product_image"/>

        <LinearLayout
            android:id="@+id/offerlogo"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#C60404">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="save: "
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹210"
                android:id="@+id/text_off"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:textColor="#ffffff"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginTop="210dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Vanilla Cake"
            android:textStyle="italic"
            android:textColor="#000000"

            android:textSize="23dp" />

        <RatingBar
            android:id="@+id/ratingbar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:numStars="5"
            android:rating="2.5"
            android:stepSize="0.5" />


        <TextView
            android:id="@+id/sub_heading"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Cakes Vanilla"
            android:gravity="center"
            android:textStyle="italic"
            android:textColor="#000000"

            android:textSize="13dp" />
        <TextView
            android:id="@+id/prices"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="₹540.00 - ₹2200.00"
            android:textStyle="normal"
            android:textColor="#000000"

            android:textSize="17dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:orientation="horizontal">




                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹232.00"
                    android:textSize="@dimen/secondry_text_size"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:visibility="gone"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="@dimen/secondry_text_size"
                    />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/new_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹210.00"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textSize="@dimen/secondry_text_size"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/ssavve"
                    android:text="Save "
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="#000"
                    android:textSize="@dimen/secondry_text_size"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="20.00 (10%)"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="#FF001E"
                    android:textSize="@dimen/secondry_text_size"
                    />

            </LinearLayout>



        </LinearLayout>







</FrameLayout>

