<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="18dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="4dp"
        android:layout_width="match_parent"
        android:background="#B3C2D1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<!--for one product-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/orders1"
                android:layout_width="220dp"
                android:layout_height="240dp"
                android:orientation="vertical">

            </LinearLayout>



            <LinearLayout
                android:id="@+id/names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>
                    </LinearLayout>














        <LinearLayout
            android:id="@+id/l1"
            android:layout_below="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL  "
                        android:textColor="@android:color/black"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/order_total"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹400090.00"
                        android:textSize="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORDER PLACED"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/order_placed"
                        android:layout_marginLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12-02-2021"
                        android:textSize="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATUS"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/order_delivered"
                        android:layout_marginLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12-02-2021"
                        android:textSize="15dp"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:background="#B3C2D1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/order_details"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:text="Get Details"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/order_details" />
            <Button
                android:id="@+id/order_cencel"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="47dp"
                android:text="Cancel Order"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/cancel_button" />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>